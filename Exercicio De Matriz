Exe 10.

#include <stdio.h>

int main()
{   
    int m[3][3];
    int l, c, s = 0, v = 0;
    
    for(l=0; l<=2; l++){
        printf("Escolha 3 numeros para a linha %d\n", l);
        for(c=0; c<=2; c++){
            scanf("%d", &m[l][c]);
        }
    }
    
    printf("\n");
    
    for(l=0; l<=2; l++){
        for(c=0; c<=2; c++){
            if(c == l){
                s += m[l][c];
            }
            printf("%d", m[l][c]);
        }
        printf("\n");
    }
    printf("\n");
    printf("O valor da soma dos numeros a cima da diagonal principal e:\n %d ", s);
    
    return 0;
}

